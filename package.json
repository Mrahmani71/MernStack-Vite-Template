{
  "name": "mernstack-vite-template",
  "version": "1.0.0",
  "description": "MernStack vite template",
  "main": "server.js",
  "author": "Mohammad RAHMANI",
  "pre-commit": "lint",
  "license": "ISC",
  "keywords": [
    "mern",
    "react",
    "mongodb",
    "vite",
    "pnpm",
    "template",
    "react 18"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "server:dev": "nodemon src/server/server.js",
    "server:build": "babel --verbose --out-dir dist/server src/server",
    "client:build": "vite build",
    "build": "npm run server:build && npm run client:build",
    "serve": "vite preview",
    "prepare": "husky install",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\" --config ./.prettierrc.js",
    "start": "node dist/server/server.js"
  },

  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-react": "^7.16.7",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@vitejs/plugin-react": "^1.3.1",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "http-proxy-middleware": "^2.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "nodemon": "^2.0.15",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "prop-types": "^15.8.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.7.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "vite": "^2.9.5",
    "webpack": ">=2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "connect-mongodb-session": "^3.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.2",
    "mongoose": "^6.3.0",
    "nodemailer": "^6.7.3",
    "rand-token": "^1.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.0",
    "react-router-dom": "^6.3.0"
  }
}
